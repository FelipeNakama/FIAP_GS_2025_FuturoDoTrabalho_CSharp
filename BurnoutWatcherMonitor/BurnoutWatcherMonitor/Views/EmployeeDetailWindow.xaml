<Window x:Class="BurnoutWatcherMonitor.Views.EmployeeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhe do Colaborador" Height="480" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Readings}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat=G}" Width="*"/>
                <DataGridTextColumn Header="Facial" Binding="{Binding FacialScore}" Width="80"/>
                <DataGridTextColumn Header="Posture" Binding="{Binding PostureScore}" Width="80"/>
                <DataGridTextColumn Header="Activity" Binding="{Binding ActivityScore}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Acknowledge Selected Alert" Click="BtnAcknowledge_Click" Margin="4,0"/>
            <Button Content="Close" Click="BtnClose_Click" Margin="4,0"/>
        </StackPanel>
    </Grid>
</Window>
